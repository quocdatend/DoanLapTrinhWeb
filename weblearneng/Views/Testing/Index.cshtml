@{
    ViewData["Title"] = "Vocabulary Page";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@model List<Exam>
<!-- ***** Main Banner Area Start ***** -->
<section class="main-banner" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 align-self-center">
                <div class="header-text">
                    <h6>Welcome to do Testing</h6>
                    <h2>Best Place To Testing english<em>English</em></h2>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="right-image">
                    <img src="~/layoutindex/assets/images/banner-right-image.png" alt="">
                </div>
            </div>
        </div>
    </div>
</section>
<section class="services" id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h4>Testing <em>English</em></h4>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="owl-service-item owl-carousel">
                    @foreach (var item in Model){
                        <div class="item">
                           <a asp-action="DoTest" asp-route-id = "@item.Examid">
                                <div class="service-item">
                                    <div class="icon">
                                        <img src="../layoutindex/assets/images/service-icon-01.png" alt="">
                                    </div>
                                        <h4>@item.Examname</h4>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
</section>
<!-- ***** Main Banner Area End ***** -->
@if (!string.IsNullOrEmpty(ViewBag.AlertMessage))
{
    <div class="alert">
        @ViewBag.AlertMessage
    </div>
}
