
@model List<weblearneng.ViewsModel.Result>

@{
    ViewData["Title"] = "Vocabulary Page";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="services" id="services">
    <div class="container1">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h4>Test <em>1</em></h4>
                </div>
                <div class="container">
                    <form action="#">
                        <div class="card">
                            <div class="card-header">
                                Đáp án
                            </div>
                            <div class="card-body col-lg-12">
                                @foreach (var result in Model)
                                {
                                    <div class="col-lg-12">
                                        <a>Question ID: @result.QuestionId | Selected Answer: @result.Answer,</a>
                                        @if(result.Ketqua == true){
                                            <span>&#10003;</span>
                                        }
                                        else
                                        {
                                            <span>
                                                &#x2718;
                                            </span>
                                        }
                                    </div>
                                }
                            </div>
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-md-6">
                                        Câu Đúng : @ViewBag.CauDung / @Model.Count
                                    </div>
                                    <div class="col-md-6">
                                        Điểm : @ViewBag.Diem
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="button-container">
                        <form asp-controller="Testing" asp-action="Exit" method="post">
                            <button type="submit" class="btn btn-primary " style="background: linear-gradient(-145deg, rgba(219, 138, 222, 1) 0%, rgba(246, 191, 159, 1) 100%) !important ;    border-color: #dc3545;">Thoát</button>
                        </form>
                        <form asp-controller="Testing" asp-action="ReDoTest" method="post">
                            <button type="submit" class="btn btn-primary " style="background: linear-gradient(-145deg, rgba(219, 138, 222, 1) 0%, rgba(246, 191, 159, 1) 100%) !important ;    border-color: #dc3545; right: 0;">Làm lại</button>
                        </form>
                        <form asp-controller="Testing" asp-action="Savetest" method="post">
                            <button type="submit" class="btn btn-primary " style="background: linear-gradient(-145deg, rgba(219, 138, 222, 1) 0%, rgba(246, 191, 159, 1) 100%) !important ;    border-color: #dc3545; right: 0;">Lưu kết quả </button
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@if (!string.IsNullOrEmpty(ViewBag.AlertMessage))
    {
        <div class="alert">
            <strong>Alert:</strong> @ViewBag.AlertMessage
        </div>
    }
<style type="text/css">
    .container1 {
        width: 800px;
        margin: 20px auto;
    }

        .container1 .h1 {
            text-align: center;
            color: #f4bca3;
        }

        .container1 .card {
            margin-bottom: 20px;
        }

        .container1 .button {
            background: linear-gradient(-145deg, rgba(219, 138, 222, 1) 0%, rgba(246, 191, 159, 1) 100%) !important
        }
</style>