@model List<string>

@{
	ViewData["Title"] = "Example | Grammar Page";
	Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<section class="main-banner" id="top">
	<div class="container">
		<table class="table">
			<thead>
				<tr>
					<th>@ViewBag.Confirm</th>
					<th>@ViewBag.Doubt</th>
					<th>@ViewBag.Negative</th>
					<th>@ViewBag.Order</th>
				</tr>
			</thead>
			<tbody>
				@if (ViewBag.Order != null)
				{
					foreach (var item in Model)
					{
						<tr>
							<td>@item</td>
						</tr>
					}
				} else {
					for(int i = 0; i<Model.Count; i+=3)
					{
						<tr>
							<td>@Model[i]</td>
							<td>@Model[i+1]</td>
							<td>@Model[i+2]</td>
						</tr>
					}
				}
			</tbody>
		</table>
		<a asp-action="CaseGrammar" asp-controller="Grammar" asp-route-name="@ViewBag.Name" style="text-decoration:none; color: white">
			<button type="submit" class="btn-primary" style="width: 100px;height: 40px;border-radius: 20px 20px; color: white; Background: #db8ade; border: none;">
				Back
			</button>
		</a>
	</div>
</section>
    
