@{
    ViewData["Title"] = "Sign up Page";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form method="POST" class="register-form" id="register-form">
                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" name="name" id="name" placeholder="Your Name" required value="@ViewBag.Name" />
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="zmdi zmdi-email"></i></label>
                        <input type="email" name="email" id="email" placeholder="Your Email" required value="@ViewBag.Email" />
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" name="pass" id="pass" placeholder="Password" required value="@ViewBag.Pass" />
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password" required value="@ViewBag.Re_pass" />
                    </div>
                    <p5 style="color: red">@ViewBag.Error</p5>
                    <p5 style="color: greenyellow">@ViewBag.Success</p5>
                    <div class="form-group">
                        <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" required />
                        <label for="agree-term" class="label-agree-term"><span id="box"><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="../layoutlogin/images/signup-image.jpg" alt="sing up image"></figure>
                <a href="#" class="signup-image-link" style="color:#222222">@Html.ActionLink("I am already member", "Index", "Account")</a>
            </div>
        </div>
    </div>
</section>

<script>
    document.getElementById("signup").addEventListener("click", function(e) {
        var checkbox = document.getElementById("agree-term");
        var border = document.getElementById("box");
        if (checkbox.checked == false){
            border.style.borderColor = "red";
            console.log("false")
        } else {
            border.style.borderColor = "black";
            console.log("true")
        }
    })
</script>
