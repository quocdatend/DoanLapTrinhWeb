@model weblearneng.Models.Account

@{
    ViewData["Title"] = "Add Users Account";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="services" id="services">
    <div class="container">
        <h1 style="padding-left: 15px;">Profile @Model.Name</h1>

        <hr />
        <div class="row" style="justify-content: center;">
            <div class="col-md-4">
                <form asp-action="ProfileUser">
                    <div class="form-group" style="margin-bottom: 25px;">
                        <label class="control-label" style="margin-bottom: 10px;">Name</label>
                        <input name="name" class="form-control" value="@Model.Name" required />
                    </div>
                    <div class="form-group" style="margin-bottom: 25px;">
                        <label class="control-label" style="margin-bottom: 10px;">Email</label>
                        <input name="email" class="form-control" value="@Model.Email" disabled />
                    </div>
                    <div class="form-group" style="margin-bottom: 25px;">
                        <a>@Html.ActionLink("Reset Password", "ForgetPass", "Account")</a>
                    </div>
                    <div class="form-group" style="text-align:center;">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                    <div class="form-group" style="text-align:center;">
                        <p style="color: red">@ViewBag.Error</p>
                        <p style="color: green">@ViewBag.Success</p>
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a style="padding-left: 20px" asp-action="Index" asp-controller="Home">
                <button class="btn btn-primary">Back to Home</button>
            </a>
        </div>
    </div>
</section>
