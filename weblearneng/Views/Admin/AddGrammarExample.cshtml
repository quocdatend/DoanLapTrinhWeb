

@{
    ViewData["Title"] = "Add Grammar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var tempname = TempData["nameViewGrammarExample"];
}

<h1 style="padding-left: 15px;">Add Grammar Example</h1>

<hr />
<div class="row" style="justify-content: center;">
    <div class="col-md-4">
        <form asp-action="AddGrammarExample"  asp-route-name="@tempname">
            <div class="form-group">
                <label class="control-label">Name</label>
                <input name="name" class="form-control" value="@tempname" disabled />
            </div>
            <div class="form-group">
                <label class="control-label">Example Order</label>
                <input name="exor" class="form-control" placeholder="exor.." />
            </div>
            <div class="form-group">
                <label class="control-label">Confirm</label>
                <input name="ex1" class="form-control" placeholder="ex1.." />
            </div>
            <div class="form-group">
                <label class="control-label">Doubt</label>
                <input name="ex2" class="form-control" placeholder="ex2.." />
            </div>
            <div class="form-group">
                <label class="control-label">Negative</label>
                <input name="ex3" class="form-control" placeholder="ex3..." />
            </div>
            <div class="form-group" style="text-align:center;">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
            <div class="form-group" style="text-align:center;">
                <p style="color: red">@ViewBag.Error</p>
                <p style="color: green">@ViewBag.Success</p>
            </div>
        </form>
    </div>
</div>

<div>
    <a style="padding-left: 20px" asp-action="ViewGrammarExample" asp-route-name="@tempname">Back to List</a>
</div>

