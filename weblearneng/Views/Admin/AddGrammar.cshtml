@model weblearneng.Models.Grammar

@{
    ViewData["Title"] = "Add Grammar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="padding-left: 15px;">Add Grammar</h1>

<hr />
<div class="row" style="justify-content: center;">
    <div class="col-md-4">
        <form asp-action="AddGrammar">
            <div class="form-group">
                <label class="control-label">Name</label>
                <input name="name" class="form-control" placeholder="name.." required />
            </div>
            <div class="form-group">
                <label class="control-label">Title</label>
                <textarea name="title" class="form-control" placeholder="title.." required></textarea>
            </div>
            <div class="form-group">
                <label class="control-label">Confirm</label>
                <input name="confirm" class="form-control" placeholder="confirm.." />
            </div>
            <div class="form-group">
                <label class="control-label">Doubt</label>
                <input name="doubt" class="form-control" placeholder="doubt.." />
            </div>
            <div class="form-group">
                <label class="control-label">Negative</label>
                <input name="negative" class="form-control" placeholder="negative..."></input>
            </div>
            <div class="form-group">
                <label class="control-label">Order</label>
                <input name="order" class="form-control" placeholder="order..."></input>
            </div>
            <div class="form-group" style="text-align:center;">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
            <div class="form-group" style="text-align:center;">
                <p style="color: red">@ViewBag.Error</p>
                <p style="color: green">@ViewBag.Success</p>
            </div>
        </form>
    </div>
</div>

<div>
    <a style="padding-left: 20px" asp-action="Grammar">Back to List</a>
</div>

