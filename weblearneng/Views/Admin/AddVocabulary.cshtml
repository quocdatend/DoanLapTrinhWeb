@model weblearneng.Models.Vocabulary

@{
    ViewData["Title"] = "Add Vocabualry";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="padding-left: 15px;">Add Vocabulary</h1>

<hr />
<div class="row" style="justify-content: center;">
    <div class="col-md-4">
        <form asp-action="AddVocabulary">
            <div class="form-group">
                <label class="control-label">First Char</label>
                <input name="fchar" class="form-control" placeholder="char.." required/>
            </div>
            <div class="form-group">
                <label class="control-label">English</label>
                <input name="nameen" class="form-control" placeholder="name.." required />
            </div>
            <div class="form-group">
                <label class="control-label">VietNamese</label>
                <input name="namevn" class="form-control" placeholder="name.." required />
            </div>
            <div class="form-group">
                <label class="control-label">Type</label>
                <input name="type" class="form-control" placeholder="type.." required />
            </div>
            <div class="form-group">
                <label class="control-label">Title</label>
                <textarea name="title" class="form-control" placeholder="..."></textarea>
            </div>
            <div class="form-group" style="text-align:center;">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
            <div class="form-group" style="text-align:center;">
                <p style="color: red">@ViewBag.Error</p>
                <p style="color: green">@ViewBag.Success</p>
            </div>
        </form>
    </div>
</div>

<div>
    <a style="padding-left: 20px" asp-action="Vocabulary">Back to List</a>
</div>

