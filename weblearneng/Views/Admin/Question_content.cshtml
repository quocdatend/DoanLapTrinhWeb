@{
    ViewData["Title"] = "Testing Page";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<QuestionsContent>
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3 mb-2 text-gray-800">ADD NEW TESTING </h1>
            </div>
            <div class="col">
                <div class="col">
                    <div class="scroll-to-section"><a asp-controller="admin" asp-action="AddQuestioncontent" asp-route-id="@ViewBag.id" class="btn btn-primary">ADD new QC</a></div>
                </div>
            </div>
        </div>
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Style</th>
                            <th>Picture</th>
                            <th>Text Content</th>
                            <th>Audio</th>
                            <th>Text question</th>
                            <th>action</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Style</th>
                            <th>Picture</th>
                            <th>Text Content</th>
                            <th>Audio</th>
                            <th>Text question</th>
                            <th>action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach(var item in Model){
                            <tr>
                                <td>@item.Contentid</td>
                                <td>@item.QuestionsStyle</td>
                                <td>
                                    @if (item.Picture != null)
                                    {
                                        <div class="card-header">
                                            <img src="@item.Picture" alt="Alternate Text" />
                                        </div>
                                    }
                                </td>
                                <td>@item.TextContent</td>
                                <td>
                                    @if (item.Adudi != null)
                                    {
                                        <div class="card-header">
                                            <audio controls>
                                                <source src="@item.Adudi" type="audio/ogg">
                                            </audio>
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (item.TextQuestionsbigIfhave != null)
                                    {
                                        <div class="card-header">
                                            @item.TextQuestionsbigIfhave
                                        </div>
                                    }
                                </td>
                                <td>

                                    <form asp-action="Question" asp-route-id="@item.Contentid" method="post">
                                        <button type="submit"><i class="fas fa-tasks"></i></button>
                                    </form>
                                    <form asp-action="EditQuestionContent" asp-route-id="@item.Contentid" method="post">
                                        <button type="submit"><i class="fas fa-edit"></i></button>
                                    </form>
                                    <form asp-action="DeleteQuestioncontent" asp-route-id="@item.Contentid" method="post">
                                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                        <span asp-validation-for="@item.Contentid" class="text-danger"></span>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script>
        // Optional confirmation dialog (consider user experience)
        $(document).ready(function () {
            $('.btn-danger').click(function (e) {
                var confirmed = confirm("Are you sure you want to delete this Question_content?");
                if (!confirmed) {
                    e.preventDefault();
                }
            });
        });
    </script>
}