@model weblearneng.Models.Account

@{
    ViewData["Title"] = "Add Users Account";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="padding-left: 15px;">Add Users Account</h1>

<hr />
<div class="row" style="justify-content: center;">
    <div class="col-md-4">
        <form asp-action="AddUserAccount">
            <div class="form-group">
                <label class="control-label">Name</label>
                <input name="name" class="form-control" placeholder="name.." value="@ViewBag.Name" required />
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input name="Email" class="form-control" placeholder="email.." required />
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input name="pass" class="form-control" placeholder="pass.." value="@ViewBag.Pass" required />
            </div>
            <div class="form-group" style="text-align:center;">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
            <div class="form-group" style="text-align:center;">
                <p style="color: red">@ViewBag.Error</p>
                <p style="color: green">@ViewBag.Success</p>
            </div>
        </form>
    </div>
</div>

<div>
    <a style="padding-left: 20px" asp-action="UserAccount">Back to List</a>
</div>

