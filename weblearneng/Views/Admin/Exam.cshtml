@model List<Exam>

@{
    ViewData["Title"] = "Testing Page";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3 mb-2 text-gray-800">Testing - Admin</h1>
            </div>
            <div class="col">
                <div class="scroll-to-section"><a asp-controller="admin" asp-action="addexam"  class="btn btn-primary">ADD new exam</a></div>
            </div>
        </div>
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>EDIT</th>
                            <th>DELETE</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>EDIT</th>
                            <th>DELETE</th>
                        </tr>
                    </tfoot>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@item.Examid</td>
                                <td>@item.Examname</td>
                                <td>
                                    <form asp-action="Question_content" asp-route-id="@item.Examid" method="post">
                                        <button type="submit"><i class="fas fa-tasks"></i></button>
                                    </form>
                                    <form asp-action="EditExam" asp-route-id="@item.Examid" method="post">
                                        <button type="submit"><i class="fas fa-edit"></i></button>
                                    </form>
                                </td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@item.Examid" method="post">
                                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                        <span asp-validation-for="@item.Examid" class="text-danger"></span>
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Optional confirmation dialog (consider user experience)
        $(document).ready(function () {
            $('.btn-danger').click(function (e) {
                var confirmed = confirm("Are you sure you want to delete this exam?");
                if (!confirmed) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
